<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

<FlexBox id="ChatBotResult" class="result" direction="Column">


                <FlexBox id="chatBusyIndicator1" visible="{chatModel>/busyIndicator}" justifyContent="Center" alignItems="Center" class="busyBox">
                    <BusyIndicator size="1rem" class="busyIndicator"/>
                </FlexBox>

                            <FlexBox >
                                        <Title  text="Summary"></Title>
                                         <HBox class="messageEmotions" id="messageEmotions">
                                            <Button icon="sap-icon://copy" type="Transparent" press="onChatCopy" tooltip="{i18n>copyTooltip}"/>
                                            <Button icon="sap-icon://download" type="Transparent" press="onChatExport" tooltip="{i18n>export}" app:message="chatModel>/result"/>
                                            </HBox>
                            </FlexBox>
                             
                            <FlexBox class="agentBox">

                            <FormattedText htmlText="{chatModel>/result}" class="agentMessage response-content" />

                             </FlexBox>


 </FlexBox>


</core:FragmentDefinition>
